{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      },
      {
        "source": "/backend/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "private"
          }
        ]
      },
      {
        "source": "**/*-+([0-9a-f]).*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/backend/**",
        "function": "backend"
      },
      {
        "source": "**/*.js",
        "destination": "/nuke-sw.js"
      }
    ]
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
  }
}
