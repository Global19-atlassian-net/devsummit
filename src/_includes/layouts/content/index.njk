{% extends 'layouts/main/index.njk' %}

{% block content %}
  {%- set moduleCSS = "/_includes/module.css" -%}
  {% css page, moduleCSS %}
  {%- set css = "/_includes/content.css" -%}
  {% css page, css %}
  <div class="{% className moduleCSS, 'root' %}">
    <h1 class="{% className moduleCSS, 'heading' %}">{% slugify title %}</h1>
    <section class="{% className css, 'content-area' %}">
      {{ content | safe }}
    </section>
  </div>
{% endblock %}
